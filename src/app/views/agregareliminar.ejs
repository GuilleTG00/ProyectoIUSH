		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
		<script src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js'></script>
		
		
		
	</head>
	<body class="no-sidebar is-preload">
		<div id="page-wrapper">

			<!-- Header Wrapper -->
				<div id="header-wrapper">
					<div class="container">

						<!-- Header -->
							<header id="header">
								<div class="inner">

									<!-- Logo -->
									<a href="/vistas" id="logo"><img style="width:12%" height="100%"  src="/resources/images/logosinnada.png" id="logo"></a>
										
									<!-- Nav -->
										<nav id="nav">
											<ul>
												<li><a href="/vistas">Mi Inicio</a></li>
												<li>
													<a href="#">Funcionalidades</a>
													<ul>
														<li><a href="#">Modificar mis datos de acceso</a></li>
														<li>
															<a href="#">Gestionar aplicación</a>
															<ul>
																<li><a href="#">Historial de Órdenes</a></li>
																<li><a href="#">Manejo de catálogo</a></li>
																<li><a href="#">Crear vendedor</a></li>
																<li><a href="#">Eliminar vendedor</a></li>
															</ul>
														</li>
														</ul>
												</li>
												<li><a href="/logout">Cerrar Sesión</a></li>
												
											</ul>
										</nav>

								</div>
							</header>

					</div>
				</div>

			<!-- Main Wrapper -->
				<div id="main-wrapper">
					<div class="wrapper style2">
						<div class="inner">
							<div class="container">
								<div id="content">

									<!-- Content -->

										<article>
											<header class="major">
												<h2 style="text-align:center"><%= name %>, aquí puedes modificar tus datos personales</h2>
												
												<p style="text-align:center">Puedes rellenar los campos que desees modificar.</p>
											</header>
											
											<h2 style="text-align:center;">A continuación, elige qué campos deseas cambiar.</h2>

											
											<section class="container box feature1">
												<div class="row" style=" display: flex; height:auto; max-width:100%; flex-direction:row;flex-wrap: wrap;align-items:center;">
												
													
												
													<div class="row">

													
													
													<div class="col" style="max-height: 30%; max-width:30%; min-height:330px; min-width:330px; border:3px">
														<section>
															<div>
																
																<header>
																	<a href=""  class="image featured"><img src="/resources/images/seguridad.png"  class="btn btn-primary hvr-bob testing" style="border:0px; border-style: outset;border-color:#25D9FE; background-color: white;" alt=""/></a>
																	<h2 style="text-align:center">Agregar o eliminar Productos y/o servicios</h2>
																	<p>Aquí podrás agregar y/o eliminar productos y/o servicios a la plataforma</p>
																	
																</header>
															</div>
															
														</section>
														
														<section>
															<div>
																
																<header>
																	<a href="/manejarcatalogo"  class="image featured"><img src="/resources/images/flechaizq.png"  class="btn btn-primary hvr-bob testing" style="border:0px; border-style: outset;border-color:#25D9FE; background-color: white;" alt=""/></a>
																	<h2 style="text-align:center">Volver atrás</h2>
																	<p>Haz click en la imagen para volver a las funcionalidades anteriores.</p>
																	
																</header>
															</div>
															
														</section>

													</div>


													
											
													<div class="col" style="margin-top:0; padding-top:0;">
														<div class="accordion" id="accordionPanelsStayOpenExample" style="margin-top:0">
															<div class="accordion-item">
															  <h2 class="accordion-header" id="panelsStayOpen-headingOne">
																<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne" style="background-color:#4890B9;">
																  Ver Productos
																</button>
															  </h2>
															  <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
																<div class="accordion-body">
																	<table class="table table-striped">
																		<tr>
																			<th>ID Producto</th>
																			<th>nombre</th>
																			<th>descripcion</th>
																			<th>precio</th>
																			<th>sección</th>
																			<th>¿Está deshabilitado?</th>
																			<th>Eliminar producto</th>
																		</tr>
																		<%for (let i=0;i<productos.length;i++){ %>
																			<tr>
																				<td><%= productos[i].id %></td>
																				<td><%= productos[i].nombre %></td>
																				<td><%= productos[i].descripcion %></td>
																				<td><%= productos[i].precio %></td>
																				<td><%= productos[i].seccion %></td>
																				<td><%if(productos[i].deshabilitado == 0){  %>
																					<%="Habilitado"%> 
																					<% } else{ %>
																					<%="Deshabilitado"%> 
																					<% } %>  
																					</td>
																				<td><a class="btn btn-primary" href="/deleteproducto/<%= productos[i].id %>">Eliminar Producto</a></td>
																			</tr>
																			<% } %>
																</table> 
																</div>
															  </div>
															</div>
															<div class="accordion-item">
																<h2 class="accordion-header" id="panelsStayOpen-headingOne">
																  <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="true" aria-controls="panelsStayOpen-collapseOne" style="background-color:#4890B9;">
																	Ver Servicios
																  </button>
																</h2>
																<div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse show" aria-labelledby="panelsStayOpen-headingOne">
																  <div class="accordion-body">
																	  <table class="table table-striped">
																		  <tr>
																			<th>ID Servicio</th>
																			<th>nombre</th>
																			<th>descripcion</th>
																			<th>precio</th>
																			<th>sección</th>
																			<th>¿Está deshabilitado?</th>
																			<th>Eliminar servicio</th>
																		  </tr>
																		  <%for (let i=0;i<servicios.length;i++){ %>
																			  <tr>
																				<td><%= servicios[i].id %></td>
																				<td><%= servicios[i].nombre %></td>
																				<td><%= servicios[i].descripcion %></td>
																				<td><%= servicios[i].precio %></td>
																				<td><%= servicios[i].seccion %></td>
																				<td><%if(servicios[i].deshabilitado == 0){  %>
																					<%="Habilitado"%> 
																					<% } else{ %>
																					<%="Deshabilitado"%> 
																					<% } %>  
																					</td>
																				<td><a class="btn btn-primary" href="/deleteservicio/<%= servicios[i].id %>">Eliminar Servicio</a></td>
																			  </tr>
																			  <% } %>
																  </table> 
																  </div>
																</div>
															  </div>

															<div class="accordion-item">
															  <h2 class="accordion-header" id="panelsStayOpen-headingTwo">
																<button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseTwo" aria-expanded="false" aria-controls="panelsStayOpen-collapseTwo">
																  Agregar Producto o Servicio
																</button>
															  </h2>
															  <div id="panelsStayOpen-collapseTwo" class="accordion-collapse collapse" aria-labelledby="panelsStayOpen-headingTwo">
																<div class="accordion-body">
																	<div class="card-body">
																		<h3 cl>Ingresa aquí los datos del nuevo producto o servicio</h3>
																		<form method="POST" action="agregareliminar">
																			<div class="input-group form-group " style="width:500px; display:inline-flex; justify-content:center">
																				<div class="input-group-prepend">
																					<span class="input-group-text" style="background-color:#2FD5FF"><i class="fas fa-user fa-2x" style="width:30px"></i></span>
																				</div>
																				<input name="nombre" type="text" style="width:30px" class="form-control" placeholder="Nombre" required>
																				
																			</div>
																			<div class="input-group form-group" style="width:500px; display:inline-flex; justify-content:center">
																				<div class="input-group-prepend">
																					<span class="input-group-text" style="background-color:#2FD5FF"><i class="fas fa-key fa-2x" style="width:30px"></i></span>
																				</div>
																				<input name="descripcion" type="text" class="form-control" placeholder="Descripción" required>
																				
																			</div>
																			
																			<div class="input-group form-group" style="width:500px; display:inline-flex; justify-content:center">
																				<div class="input-group-prepend">
																					<span class="input-group-text" style="background-color:#2FD5FF"><i class="fas fa-user fa-2x" style="width:30px"></i></span>
																				</div>
																				<input name="precio" type="text" class="form-control" placeholder="Precio" required>
																			</div>
																			<div class="input-group form-group" style="width:500px; display:inline-flex; justify-content:center">
																				<div class="input-group-prepend">
																					<span class="input-group-text" style="background-color:#2FD5FF"><i class="fas fa-user fa-2x" style="width:30px"></i></span>
																				</div>
																				<input name="seccion" type="text" class="form-control" placeholder="Sección en la que se encuentra" required>
																			</div>
																			<div class="input-group form-group" style="width:500px; display:inline-flex; justify-content:center">
																				<div class="input-group-prepend">
																					<span class="input-group-text" style="background-color:#2FD5FF"><i class="fas fa-mail-bulk fa-2x" style="width:30px"></i></span>
																				</div>
																				<select name="deshabilitado" id="">
																					<option value="1">Deshabilitado</option>
																					<option value="0">Habilitado</option>
																				</select>
																			</div>
																			<div class="input-group form-group" style="width:500px; display:inline-flex; justify-content:center">
																				<div class="input-group-prepend">
																					<span class="input-group-text" style="background-color:#2FD5FF"><i class="fas fa-mail-bulk fa-2x" style="width:30px"></i></span>
																				</div>
																				<select name="opcion" id="">
																					<option value="Producto">Producto</option>
																					<option value="Servicio">Servicio</option>
																				</select>
																			</div>
																			


																			
																	</div>
																	<div>
																		<button type="submit" style="border-radius:5%">
																			<span>Agregar Producto / Servicio</span>
																			  </button>
																	</div>
					
																</div>
															  </div>
															</div>
															
														  </div>
													</div>
												
											</div>
										</div>
										</article>

								</div>
							</div>
						</div>
					</div>
					
					



<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

			<% if(typeof alert !="undefined"){ %>
				<script>
					Swal.fire({
						title: "<%= alertTitle %>",
						alertMessage:"<%= alertMessage %>",
						icon: "<%=alertIcon%>",
						showConfirmButton: "<%=showConfirmButton%>",
						timer: "<%= timer %>"
					}).then(() => {
						window.location ="/<%=ruta%>"
					})
				</script>
			<% } %> 
		
			

		<!-- Scripts -->
			<script src="/resources/js/gsap.js"></script>
			<script src="/resources/assets/js/jquery.min.js"></script>
			<script src="/resources/assets/js/jquery.dropotron.min.js"></script>
			<script src="/resources/assets/js/browser.min.js"></script>
			<script src="/resources/assets/js/breakpoints.min.js"></script>
			<script src="/resources/assets/js/util.js"></script>
			<script src="/resources/assets/js/main.js"></script>





	</body>
</html>