<!DOCTYPE HTML>
<html>

<head>
	<title>Página principal Admin</title>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
	<link rel="stylesheet" href="/resources/assets/css/carrito.css" />
	<link rel="stylesheet" href="/resources/assets/css/main.css" />
	
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	<script src=""></script>
	<script src="/resources/assets/js/jquery.min.js"></script>
	<script src="/resources/assets/js/jquery.dropotron.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hover.css/2.3.1/css/hover.css" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
		crossorigin="anonymous"></script>
	<script src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js'></script>



</head>

<body class="no-sidebar is-preload">
	<div id="page-wrapper">

		<!-- Header Wrapper -->
		<div id="header-wrapper">
			<div class="container">

				<!-- Header -->
				<header id="header">
					<div class="inner">

						<!-- Logo -->
						<a href="/vistas" id="logo"><img style="width:12%" height="100%"
								src="/resources/images/logosinnada.png" id="logo"></a>

						<!-- Nav -->
						<nav id="nav">
							<ul>
								<li><a href="/vistas">Mi Inicio</a></li>
								<li>
									<a href="#">Funcionalidades</a>
									<ul>
										<li><a href="#">Modificar datos personales</a></li>
										<li>
											<a href="#">Productos y/o servicios</a>
											<ul>
												<li><a href="#">Hacer un pedido de productos y/o servicios</a></li>
												<li><a href="#">Visualizar productos y/o servicios</a></li>
											</ul>
										</li>
									</ul>
								</li>
								<li><a href="#">Mis órdenes</a></li>
								<li><a href="/logout">Cerrar Sesión</a></li>

							</ul>
						</nav>

					</div>
				</header>

			</div>
		</div>

		<!-- Main Wrapper -->
		<div id="main-wrapper">
			<div class="wrapper style2">
				<div class="inner">
					<div class="container">
						<div id="content">

							<!-- Content -->


							<article>
								<header class="major">
									<h2 style="text-align:center">
										<%= name %>, aquí puedes revisar tu carrito de compras
									</h2>

								</header>

									<div class="row" style="padding-top:0">

										
											<div class="cart_section" style="width:150%;">
												<div class="container-fluid">
													<div class="row">
														<div class="col-lg-10 offset-lg-1">
															<div class="cart_container" style="text-align:center">
																<div class="cart_title"><h2>Carrito de compras</h2><small> (<%=productos.length + servicios.length%> elementos en tu carrito)</small></div>
																<div class="cart_items">
																	<div class="accordion-body">
																		<form method="POST" action="carrito">
																	<% let total = productos.length + servicios.length  %> 
																	<% let acumulado = 0  %> 
																	<% for (let z=0;z<productos.length;z++) { %> 
																	<ul class="cart_list" style="width: 100%;">
																		
																		<li class="cart_item clearfix table table-striped table-responsive">
																			<div class="cart_item_image"><img src="/resources/images/Tecnologiaproductos.jpg" alt=""></div>
																			<div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
																				<div class="cart_item_name cart_info_col">
																					<div class="cart_item_title">ID Del producto</div>
																					<div class="cart_item_text"><input style="width:50%;text-align:center" type="text" readonly name="idproducto" value="<%=resultadosProductos[z].id%>"></input></div>
																				</div>
																				<div class="cart_item_color cart_info_col">
																					<div class="cart_item_title">Descripción del producto</div>
																					<div class="cart_item_text"><input type="text" name="descripcionproducto" readonly value="<%=resultadosProductos[z].descripcion%>"></input></div>
																				</div>
																				
																				<div class="cart_item_price cart_info_col">
																					<div class="cart_item_title" style="text-align:center">Precio</div>
																					<div class="cart_item_text"><input type="text" name="precio" style="width:80%;text-align:center" readonly value="<%=resultadosProductos[z].precio%>"></input></div>
																				</div>
																				<div class="cart_item_total cart_info_col">
																					<div class="cart_item_title">Eliminar producto</div>
																					<div class="cart_item_text"><a class="btn btn-primary" href="/eliminarcarritoproducto/<%=resultadosProductos[z].id%>">Eliminar este producto</a></div>
																				</div>
																			</div>
																		</li>
																	</ul>
																	<% acumulado = acumulado+resultadosProductos[z].precio %> 
																	<% } %> 
																	<% for (z=0;z<servicios.length;z++) { %> 
																		<ul class="cart_list">
																			<ul class="cart_list">
																		
																				<li class="cart_item clearfix table table-striped table-responsive">
																					<div class="cart_item_image"><img src="/resources/images/servicio_al_cliente.png" alt=""></div>
																					<div class="cart_item_info d-flex flex-md-row flex-column justify-content-between">
																						<div class="cart_item_name cart_info_col">
																							<div class="cart_item_title">ID Del Servicio</div>
																							<div class="cart_item_text"><input type="text" name="idservicio" style="width:80%;text-align:center" readonly value="<%= resultadosServicios[z].id  %>"> </div>
																						</div>
																						<div class="cart_item_color cart_info_col">
																							<div class="cart_item_title">Descripción del servicio</div>
																							<div class="cart_item_text"><input style="width:50%;text-align:center" type="text" readonly name="descripcionservicio" value="<%=resultadosServicios[z].descripcion%>"></input></div>
																						</div>
																						
																						<div class="cart_item_price cart_info_col">
																							<div class="cart_item_title">Precio</div>
																							<div class="cart_item_text"><input type="text" name="precioservicios" style="width:80%;text-align:center" readonly value="<%= resultadosServicios[z].precio  %>"></div>
																						</div>
																						<div class="cart_item_total cart_info_col">
																							<div class="cart_item_title">Eliminar Servicio</div>
																							<div class="cart_item_text"><a class="btn btn-primary" style="text-align:center; align-content:center" href="/eliminarcarritoproducto/<%=resultadosProductos[z].id%>">Eliminar este Servicio</a></div>
																						</div>
																					</div>
																				</li>
																			</ul>
																			<% acumulado = acumulado+resultadosProductos[z].precio %> 
																		<% } %> 
																
																</div>
															</div>
																
																<div class="order_total">
																	<div class="order_total_content text-md-right">
																		<div class="order_total_title">Total de la compra:</div>
																		<div class="order_total_amount"><input type="text" name="preciototal" style="width:80%;text-align:center" readonly value="<%=acumulado%>"> </div>
																	</div>
																</div>
																
																<div class="cart_buttons"> 
																	<a class="btn btn-primary" style="margin-right:50px; margin-bottom:30px;" href="/hacerpedido">Seguir Comprando</a>
																	<a class="btn btn-primary" style=" margin-right:50px;margin-bottom:30px;"><button type="submit">¡Comprar ahora!</button></a>
																	 </div>
															</div>
														</div>
													</div>
												</div>
											</div>
											
										</div>
										</form>
									<div style="display:flex;flex-direction:row; justify-content:center;align-items:center">
										<div class="col-4 col-12-medium" style="padding-top:7%">
											<section>
												
												<a href="/vistas" class="image featured" style="display:flex; flex-direction: column; align-items:center"><img src="/resources/images/flechaizq.png"
														class="btn btn-primary hvr-bob testing"
														style="border:0px; border-style: outset; border-radius:10%; height:60%;width:40%;background-color: white; align-self: center"
														alt=""/></a><h4 style="text-align:center">Volver al menú principal</h4>
												<header>
													
												</header>
											</section>
										</div>
										<div class="col-4 col-12-medium" style="padding-top:7%">
											<section>
												
												<a href="/carrito" class="image featured" style="display:flex; flex-direction: column; align-items:center"><img src="/resources/images/carrito.png"
														class="btn btn-primary hvr-bob testing"
														style="border:0px; border-style: outset; border-radius:10%; height:60%;width:40%;background-color: white; align-self: center"
														alt=""/></a><h4 style="text-align:center">Actualmente estás en el carrito de compras</h4>
												<header>
													
												</header>
											</section>
										</div>
									</div>
		


















										

											
										</div>
									</div>
							</article>

						</div>
					</div>
				</div>
			</div>





			<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

			<% if(typeof alert !="undefined" ){ %>
				<script>
					Swal.fire({
						title: "<%= alertTitle %>",
						alertMessage: "<%= alertMessage %>",
						icon: "<%=alertIcon%>",
						showConfirmButton: "<%=showConfirmButton%>",
						timer: "<%= timer %>"
					}).then(() => {
						window.location = "/<%=ruta%>"
					})
				</script>
				<% } %>



					<!-- Scripts -->

					<script src="/resources/js/gsap.js"></script>


					<script src="/resources/assets/js/browser.min.js"></script>
					<script src="/resources/assets/js/breakpoints.min.js"></script>
					<script src="/resources/assets/js/util.js"></script>
					<script src="/resources/assets/js/main.js"></script>

					<script>
						$('#exampleModal').modal('hide');
						$('body').removeClass('modal-open');
						$('.modal-backdrop').remove();
					</script>



</body>

</html>